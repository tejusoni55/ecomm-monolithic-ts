{
  "name": "ecomm-monolithic-ts",
  "version": "1.0.0",
  "description": "A Node.js Typescript Practice API Project of E-commerce",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npx ts-node --require ./src/common/lib/logger/instrumentation.ts ./src/index.ts",
    "build": "tsc",
    "start": "node --require ./dist/common/lib/logger/instrumentation.js ./dist/index.js",
    "db:generate": "drizzle-kit generate --config=./src/common/db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./src/common/db/drizzle.config.ts",
    "db:init": "npx ts-node ./src/common/db/init.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "k6": "k6 run k6/main.js",
    "k6:load": "k6 run -e TEST_TYPE=load k6/main.js",
    "k6:stress": "k6 run -e TEST_TYPE=stress k6/main.js",
    "k6:spike": "k6 run -e TEST_TYPE=spike k6/main.js"
  },
  "author": "Tejas Soni",
  "type": "commonjs",
  "dependencies": {
    "@opentelemetry/exporter-logs-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation": "^0.208.0",
    "@opentelemetry/instrumentation-winston": "^0.53.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-logs": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/winston-transport": "^0.19.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
